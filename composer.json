{
	"name": "dzoljom/phpcs-example",
	"description": "Example PHPCS standard",
	"type": "phpcodesniffer-standard",
	"license": "MIT",
	"authors": [
		{
			"name": "Denis Å½oljom",
			"email": "denis.zoljom@gmail.com"
		}
	],
	"require": {
		"squizlabs/php_codesniffer": "^3.6.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
		"phpcsstandards/phpcsdevtools": "^1.0",
		"phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0"
	},
	"autoload-dev": {
		"psr-4": {
			"MyCoolStandard\\PhpCSExample\\": "PhpCSExample/"
		}
	},
	"scripts": {
		"standards:list": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs -i",
		"standards:check": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"standards:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
		"tests:run": "@php ./vendor/phpunit/phpunit/phpunit --filter PhpCSExample ./vendor/squizlabs/php_codesniffer/tests/AllTests.php"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
